{
  $schema: 'https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json',
  appId: '',
  productName: '',
  copyright: '',
  icon: 'public/icons/512x512.png',
  asar: true,
  directories: {
    output: 'build/',
    buildResources: 'public',
  },
  files: ['dist-electron', 'dist'],
  linux: {
    maintainer: '',
    target: ['deb'],
  },
  deb: {
    depends: [
      'ca-certificates',
      'fonts-hosny-amiri',
      'fonts-liberation',
      'fonts-noto-color-emoji',
      'fonts-wqy-microhei',
      'fonts-arphic-ukai',
      'fonts-arphic-uming',
      'fonts-ipafont-mincho',
      'fonts-ipafont-gothic',
      'fonts-unfonts-core',
      'fonts-arphic-uming',
      'gconf2',
      'gconf-service',
      'language-pack-de',
      'language-pack-en',
      'libappindicator1',
      'libasound2',
      'libatk1.0-0',
      'libc6',
      'libcairo2',
      'libcanberra-gtk3-module',
      'libcanberra-gtk-module',
      'libcups2',
      'libdbus-1-3',
      'libdrm2',
      'libegl1',
      'libexpat1',
      'libfontconfig1',
      'libgbm-dev',
      'libgcc1',
      'libgconf-2-4',
      'libgdk-pixbuf2.0-0',
      'libgdm1',
      'libgl1',
      'libgl1-mesa-glx',
      'libgles2',
      'libglib2.0-0',
      'libglvnd0',
      'libglx0',
      'libgtk-3-0',
      'libnotify4',
      'libnspr4',
      'libnss3',
      'libpango-1.0-0',
      'libpangocairo-1.0-0',
      'libstdc++6',
      'libx11-6',
      'libx11-6',
      'libx11-6',
      'libx11-xcb1',
      'libxcb1',
      'libxcb-dri3-0',
      'libxcomposite1',
      'libxcursor1',
      'libxdamage1',
      'libxext6',
      'libxext6',
      'libxfixes3',
      'libxi6',
      'libxrandr2',
      'libxrender1',
      'libxshmfence1',
      'libxss1',
      'libxtst6',
      'lsb-release',
      'mesa-utils',
      'wget',
      'x11vnc',
      'xdg-utils',
      'xserver-xorg-video-all',
    ],
  },
  mac: {
    artifactName: '${productName}_${version}.${ext}',
    target: ['dmg'],
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: ['x64'],
      },
    ],
    artifactName: '${productName}_${version}.${ext}',
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
}
